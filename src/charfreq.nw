void prchar(int c)
{
    switch (c) {
	case ' ':
	    printf("%11s", "<space>");
	    break;
	case '\b':
	    printf("%11s", "<backspace>");
	    break;
	case '\n':
	    printf("%11s", "<newline>");
	    break;
	case '\t':
	    printf("%11s", "<tab>");
	    break;
	default:
	    /* FIXME: why can't I return this? */
	    /* return ((char[2]) { (char) c, '\0' }); */
	    printf("%11c", c);
	    break;
    }
}


@ %def prchar

