int main()
{
    int c;
    int freq[MAX_ASCII+1] = {0};

    <<For each character [[c]] until [[EOF]]>>
	++freq[c];

    for (int i = 0; i <= MAX_ASCII; ++i) {
	if (!freq[i]) continue;

	prchar(i);
	fputs(": ", stdout);
	for (int j = 0; j < freq[i]; ++j)
	    putchar('#');
	putchar('\n');
    }


    return 0;
}
